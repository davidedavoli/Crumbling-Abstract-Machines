include "newalpha.ma".

lemma alpha_comm: ∀e, b, n, m, y, H1, H2, H3, H4. well_named 〈b, e〉 = true → 
 pi1 … (alpha_c (ssc 〈b, e〉 y (νn) H1) m H2) = ssc (pi1 … (alpha_c 〈b, e〉 (m) H3)) y (νn) H4.
@Environment_simple_ind2
[ //
| #e * * #z #b' #HI #b #n #m * #y #H1 #H2 #H3 #H4 #Hw lapply H4
  whd in match (alpha_c ? ? ?); lapply H2
  whd in match (ssc ? ? ? ?);
  whd in match (sse ? ? ? ?);
  whd in match (veqb ? ?);
  cut (neqb y z = true ∨ neqb y z = false) // * #Hyz >Hyz
  [ >if_t  #H2 #H4 whd in match (alpha_c ? ? ?); lapply H2
  lapply H3  lapply H1 -H4 -H3 -H1   >Hyz